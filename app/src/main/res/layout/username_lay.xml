<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/namauser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fz.fzapp.common.Username">

    <TextView
        android:id="@+id/textView"
        style="@style/DefaultUtils3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/titleLogin" />

    <Button
        android:id="@+id/splitter"
        style="@style/DefaultSplitter"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etUsernameLogin"
        style="@style/DefaultEditText"
        android:layout_alignEnd="@+id/splitter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/splitter"
        android:layout_marginTop="150dp"
        android:drawableLeft="@drawable/account_32"
        android:ems="10"
        android:hint="@string/hintUserID"
        android:inputType="textPersonName"
        android:maxLength="75" />

    <RelativeLayout
        android:id="@+id/rlUsername"
        style="@style/DefaultButton"
        android:layout_alignEnd="@+id/etUsernameLogin"
        android:layout_alignRight="@+id/etUsernameLogin"
        android:layout_below="@id/etUsernameLogin"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnUsernameLogin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />
    </RelativeLayout>
</RelativeLayout>
