<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sinkrondata_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fz.fzapp.common.SyncData">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView"
            style="@style/DefaultUtils3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/titleSyncData1" />

        <TextView
            android:id="@+id/textView2"
            style="@style/DefaultHead1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="@string/titleSyncData2" />

        <View
            android:id="@+id/splitter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="8dp"
            android:background="@color/gray" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:orientation="horizontal"
            android:paddingTop="-1dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/padding_20"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/account_32" />

                <TextView
                    android:id="@+id/tvUserNameSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/padding_14"

                    />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/padding_20"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkGrey">

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="10dp"
                    android:src="@drawable/truck_32" />

                <TextView
                    android:id="@+id/tvTruckSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/padding_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMsg"
                style="@style/DefaultHead1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_80"
                android:text="@string/titleKlik"
                android:textSize="@dimen/padding_14" />

            <ImageView
                android:id="@+id/ivGo"
                android:layout_width="@dimen/diameter_circle"
                android:layout_height="@dimen/diameter_circle"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/buttonthick"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/btnCancelGo"
                style="@style/DefaultGrayButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                android:layout_marginTop="40dp"
                android:text="@string/strBtnCancel"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvNotifeSync"
                style="@style/DefaultHead1"
                android:layout_above="@id/btnCancelGo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="@string/notifikasiText"
                android:textSize="@dimen/padding_14"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlProgreeBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_weight="1"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>
