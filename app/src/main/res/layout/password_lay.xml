<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fz.fzapp.common.Password">

    <TextView
        style="@style/DefaultUtils3"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/titlePassword"/>

    <Button
        android:id="@+id/splitter"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="8dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/etPasswordLogin"
        style="@style/DefaultEditText"
        android:layout_marginTop="119dp"
        android:drawableLeft="@drawable/padlock_32"
        android:ems="10"
        android:hint="@string/hintPassword"
        android:inputType="textPassword"
        android:maxLength="75"
        android:layout_below="@+id/splitter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/rlPasswordLogin"
        style="@style/DefaultButton"
        android:layout_alignEnd="@+id/etPasswordLogin"
        android:layout_alignRight="@+id/etPasswordLogin"
        android:layout_below="@id/etPasswordLogin"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="40dp">


        <Button
            android:id="@+id/btnPasswordLogin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow" />

    </RelativeLayout>
</RelativeLayout>
